generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id         Int        @id @default(autoincrement())
  name       String
  author     String
  image      String
  pages      Int
  slug       String     @unique
  format     String
  categories Category[] @relation("BookToCategory")
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[] @relation("BookToCategory")
}
